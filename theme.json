{
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "620px",
            "wideSize": "1000px"
        },
        "spacing": {
            "units": [
                "%",
                "px",
                "em",
                "rem",
                "vh",
                "vw"
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen-Sans, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif",
                    "name": "System Font",
                    "slug": "system-font"
                },
                {
                    "name": "Instrument Serif",
                    "slug": "instrument-serif",
                    "fontFamily": "\"Instrument Serif\"",
                    "fontFace": [
                        {
                            "fontFamily": "\"Instrument Serif\"",
                            "fontStyle": "italic",
                            "fontWeight": "400",
                            "src": [
                                "file:./assets/fonts/instrument-serif/instrument-serif-400-italic.ttf"
                            ]
                        },
                        {
                            "fontFamily": "\"Instrument Serif\"",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./assets/fonts/instrument-serif/instrument-serif-400-normal.ttf"
                            ]
                        }
                    ]
                },
                {
                    "name": "Gulzar",
                    "slug": "gulzar",
                    "fontFamily": "Gulzar",
                    "fontFace": [
                        {
                            "fontFamily": "Gulzar",
                            "fontStyle": "normal",
                            "fontWeight": "400",
                            "src": [
                                "file:./assets/fonts/gulzar/gulzar-400-normal.ttf"
                            ]
                        }
                    ]
                }
            ]
        },
        "useRootPaddingAwareAlignments": true
    },
    "styles": {
        "color": {
            "background": "#1d1b1c",
            "text": "#f6f5ed"
        },
        "elements": {
            "caption": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--instrument-serif)"
                }
            },
            "heading": {
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--instrument-serif)"
                }
            },
            "link": {
                "color": {
                    "text": "#f6f5ed"
                },
                "typography": {
                    "fontFamily": "var(--wp--preset--font-family--instrument-serif)"
                }
            }
        },
        "typography": {
            "fontFamily": "var(--wp--preset--font-family--gulzar)"
        }
    },
    "templateParts": [
        {
            "area": "header",
            "name": "header"
        },
        {
            "area": "footer",
            "name": "footer"
        }
    ],
    "version": 3,
    "$schema": "https://schemas.wp.org/wp/6.6/theme.json"
}